# Variables de entorno para producción - Backend Node.js

# Configuración del servidor
PORT=80
NODE_ENV=production

# Configuración de la base de datos SQL Server en Azure
DB_SERVER=mantenedor-sqlserver.database.windows.net
DB_NAME=NuevoCCMM
DB_USER=sqladmin
DB_PASSWORD=TuPasswordSegura123!
DB_PORT=1433
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false

# String de conexión completa (alternativa)
DATABASE_URL=Server=mantenedor-sqlserver.database.windows.net,1433;Database=NuevoCCMM;User Id=sqladmin;Password=TuPasswordSegura123!;Encrypt=true;TrustServerCertificate=false;Connection Timeout=30;

# Configuración de CORS
CORS_ORIGIN=https://mantenedor-frontend.azurewebsites.net
ALLOWED_ORIGINS=https://mantenedor-frontend.azurewebsites.net,https://localhost:4200

# Configuración de autenticación (futuro)
JWT_SECRET=tu-jwt-secret-muy-seguro-para-produccion
JWT_EXPIRES_IN=24h

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de la aplicación
APP_NAME=Mantenedor Backend API
APP_VERSION=1.0.0